{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es5", "es2015", "dom"],
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}
